{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SMS Backup Viewer",
  "version": "0.5.0",
  "identifier": "io.github.smokehound.sms-backup-viewer",
  "build": {
    "frontendDist": "../dist/sms-backup-viewer/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "npm run start:tauri",
    "beforeBuildCommand": "npm run build -- --configuration tauri"
  },
  "app": {
    "windows": [
      {
        "title": "SMS Backup Viewer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
